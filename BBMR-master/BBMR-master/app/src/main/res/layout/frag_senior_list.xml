<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="8dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    app:layout_constrainedHeight="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DCE5F0">

        <!-- Your existing layout code here -->

        <ImageView
            android:id="@+id/imgS"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/coffee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNameS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="아메리카노"
            android:textColor="#000000"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imgS"
            app:layout_constraintStart_toStartOf="@+id/imgS"
            app:layout_constraintTop_toBottomOf="@+id/imgS" />

        <TextView
            android:id="@+id/tvPriceS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2,000원"
            android:textColor="#000000"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tvNameS"
            app:layout_constraintStart_toStartOf="@+id/tvNameS"
            app:layout_constraintTop_toBottomOf="@+id/tvNameS" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
